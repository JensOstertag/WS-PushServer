{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "server/pushMessage",
  "type": "object",
  "properties": {
    "messageType": {
      "type": "string",
      "const": "SERVER_ACTION"
    },
    "action": {
      "type": "string",
      "const": "BROADCAST_CHANNEL"
    },
    "data": {
      "type": "object",
      "properties": {
        "channel": {
          "type": "string"
        },
        "channelToken": {
          "type": "string"
        },
        "recipients": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        "message": {
          "type": "string"
        }
      },
      "required": [
        "channel",
        "channelToken",
        "recipients",
        "message"
      ]
    }
  },
  "required": [
    "messageType",
    "action",
    "data"
  ]
}
